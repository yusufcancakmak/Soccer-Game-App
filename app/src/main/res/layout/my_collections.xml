            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            app:layout_constraintBottom_toBottomOf="@+id/yellow_card_fav_one"
            app:layout_constraintEnd_toEndOf="@+id/yellow_card_fav_one"
