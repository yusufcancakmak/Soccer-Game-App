<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backgroundvers">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="@drawable/backgroundvers">


        <ImageView
            android:id="@+id/yellow_card_fav_one"
            android:layout_width="104dp"
            android:layout_height="142dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/yellowcard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </ImageView>

        <TextView
            android:id="@+id/txt_fav_name"
            android:layout_width="42dp"
            android:layout_height="6dp"
            android:text="name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="5sp"
            app:layout_constraintBottom_toBottomOf="@+id/yellow_card_fav_one"
            app:layout_constraintEnd_toEndOf="@+id/yellow_card_fav_one"
            app:layout_constraintStart_toStartOf="@+id/yellow_card_fav_one"
            app:layout_constraintTop_toTopOf="@+id/yellow_card_fav_one"
            app:layout_constraintVertical_bias="0.066" />

        <ImageView
            android:id="@+id/green_card_fav_two"
            android:layout_width="104dp"
            android:layout_height="142dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/greencard"
            app:layout_constraintEnd_toStartOf="@+id/blue_card_fav_three"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/yellow_card_fav_one"
            app:layout_constraintTop_toTopOf="parent"></ImageView>

        <TextView
            android:id="@+id/txt_name_fav2"
            android:layout_width="42dp"
            android:layout_height="6dp"
            android:text="name"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/green_card_fav_two"
            app:layout_constraintEnd_toEndOf="@+id/green_card_fav_two"
            app:layout_constraintHorizontal_bias="0.548"
            app:layout_constraintStart_toStartOf="@+id/green_card_fav_two"
            app:layout_constraintTop_toTopOf="@+id/green_card_fav_two"
            app:layout_constraintVertical_bias="0.066" />

        <ImageView
            android:id="@+id/blue_card_fav_three"
            android:layout_width="104dp"
            android:layout_height="142dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:src="@drawable/bluecard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/green_card_fav_two"
